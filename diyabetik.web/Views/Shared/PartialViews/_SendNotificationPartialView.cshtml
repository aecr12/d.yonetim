@model Notification
<h2>Bildirim Gönder</h2>
<div>
    <form method="POST" asp-controller="Notification" asp-action="ReceiveNotification">
        <div class="form-group">
            <label for="Title">Bildirim Başlığı</label>
            <input asp-for="Title" class="form-control">
        </div>
        <div class="form-group">
            <label for="Body">İçerik</label>
            <input asp-for="Body" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary d-flex justify-content-center">Gönder</button>
    </form>
</div>
 
