@model UserViewModel
@{
    var users = Model.Users;
}
<div class="row">
    <div class="col-md">
        @if(Model.Users.Count == 0)
        {
            // kullanıcı yoksa görüntülenecek sayfa
            @await Html.PartialAsync("_nouser")
        }
        else
        {
            <div class="row">
                    <table class="table table-bordered text-center">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Ad</th>
                                <th scope="col">Mail</th>
                                <th scope="col">Id</th>
                                <th scope="col" class="d-flex justify-content-center"></th>
                                <th scope="col" class="d-flex justify-content-center"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (var i = 0; i < Model.Users.Count; i++)
                            {
                                <tr>
                                    <th scope="row">@i</th>
                                    <td>@Model.Users[@i].adSoyad</td>
                                    <td>@Model.Users[@i].Mail</td>
                                    <td>@Model.Users[@i].Id</td>
                                    <td>
                                        <a class="btn btn-primary btn-sm d-flex justify-content-center" href="/user/userdetails/@Model.Users[@i].Id/" class="btn btn-primary">Yönet</a>
                                    </td>
                                    <td>
                                        <a class="btn btn-primary btn-sm d-flex justify-content-center" href="user/userdelete/@Model.Users[@i].Id" class="btn btn-primary">Sil</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
            </div>
        }
        </div>
        <div class="d-flex justify-content-end">
            <a href="/User/Create" class="btn btn-primary">Kullanıcı Ekle</a>
        </div>
</div>
<script>
</script>